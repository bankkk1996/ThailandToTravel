<h3><a class="btn btn-secondary" href="/place"><i class="fa fa-plus"></i> Create New</a> Place List</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Description</th>
            <th>Title</th>
            <th>Detail</th>
            <th>Time</th>
            <th>Telephone</th>
            <th>Activity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.lat}}</td>
            <td>{{this.lng}}</td>
            <td>{{this.description}}</td>
            <td>{{this.title}}</td>
            <td>{{this.detail}}</td>
            <td>{{this.time}}</td>
            <td>{{this.tel}}</td>
            <td>{{this.activity}}</td>
            <td>
                <a href="/place/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/place/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
