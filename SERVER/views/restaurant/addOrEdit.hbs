<form action="/restaurant" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{restaurant._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" value="{{restaurant.name}}">
        <div class="text-danger">{{restaurant.nameError}}</div>
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" placeholder="Address" value="{{restaurant.address}}">
        <div class="text-danger">{{restaurant.addressError}}</div>
    </div>
    <div class="form-group">
        <label>Telephone</label>
        <input type="text" class="form-control" name="tel" placeholder="Telephone" value="{{restaurant.tel}}">
        <div class="text-danger">{{restaurant.telError}}</div>
    </div>
    <div class="form-group">
        <label>Detail</label>
        <input type="text" class="form-control" name="detail" placeholder="Detail" value="{{restaurant.detail}}">
        <div class="text-danger">{{restaurant.detailError}}</div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/restaurant/list"><i class="fa fa-list-alt"></i> View All</a>
